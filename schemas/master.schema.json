{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "$ref": "workflow.schema.json"
    },
    {
      "$ref": "lint.schema.json"
    },
    {
      "$ref": "tests.schema.json"
    },
    {
      "not": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "workflowVersion": {
                "type": "string"
              }
            },
            "required": ["workflowVersion"]
          },
          {
            "type": "object",
            "properties": {
              "lintVersion": {
                "type": "string"
              }
            },
            "required": ["lintVersion"]
          },
          {
            "type": "object",
            "properties": {
              "testsVersion": {
                "type": "string"
              }
            },
            "required": ["testsVersion"]
          }
        ]
      }
    }
  ]
}